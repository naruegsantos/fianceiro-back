
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum categories {
  REVENUE
  EXPENSE
  TRANSFERENCE
}

enum permissions {
  ADMIN
  OPERATOR
  GUEST
}



model User {
  id         Int        @id @default(autoincrement())
  name       String
  email      String     @unique
  password   String
  permission permissions
  accounts Account[]
}

model Account {
  id         Int        @id @default(autoincrement())
  label      String     
  userId  Int
  user User @relation(fields: [userId], references: [id])
  category categories
  records Record[]
}


model Record {
  id         Int        @id @default(autoincrement())
  label String
  accountId Int
  account Account @relation(fields: [accountId], references: [id])
  category categories
  date String 
}